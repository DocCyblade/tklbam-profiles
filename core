# data
/opt
/srv
/home

/root
-/root/.cache # duplicity caches by default here

# system minus instance-specific stuff
/usr/local

/etc
-/etc/apt
-/etc/resolv.conf
-/etc/resolvconf
-/etc/network/interfaces
-/etc/passwd*
-/etc/group*
-/etc/hostname
-/etc/fstab
-/etc/mtab
-/etc/udev/rules.d
-/etc/ssh/ssh_host_*
-/etc/mysql/debian.cnf

# temporary workaround to prevent 2009.10-2 changes getting into the delta
# (we won't need this once we begin versioning appliances explicitly)
-/etc/apache2/mods-available/substitute.conf 
-/etc/webmin/webmin/config

# ec2 blacklist
-/etc/event.d/console
-/usr/local/bin/ec2metadata
-/usr/local/lib/python2.5/site-packages/ec2metadata.py*

# vmdk blacklist
-/etc/kernel-img.conf

# /var whitelist
/var/www
/var/lib/shellinabox # in case you reconfigure the certificate
